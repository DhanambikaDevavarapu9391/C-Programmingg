//Difference btwn max num and min num //
#include<stdio.h>
main()
{
	int a[10],i,n,min,max,diff;
	printf("Enter the size of the array:");
	scanf("%d",&n);
	printf("Enter the array elements:");
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
	min=max=a[0];
	for(i=1;i<n;i++)
	{
		if(a[i]>max)
		max=a[i];
		if(a[i]<min)
		min=a[i];
		
	}
	printf("max=%d min=%d",max,min);
	diff=max-min;
	printf("\nDifference btw max no and min no =%d",diff);
	
}
